<script>
document.getElementById('contact-form').addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const btn = this.querySelector('button[type="submit"]');
    const btnText = btn.querySelector('.btn-text');
    const spinner = btn.querySelector('.spinner-border');
    const messages = document.getElementById('form-messages');
    
    // Mostra loading
    btnText.textContent = 'Invio in corso...';
    spinner.classList.remove('d-none');
    btn.disabled = true;

    try {
        const response = await emailjs.sendForm('nmfattobene_google', 'template_nmfb_conttataci', this);
        if (response.status == 200) {
            messages.innerHTML = '<div class="alert alert-success">Messaggio inviato con successo üëç</br></br>Verrai ricontattato il prima possibile al mumero da te fornito.</div>';
            this.reset();
        } else {
            throw new Error('Errore nell\'invio');
        }
    } catch (error) {
        messages.innerHTML = '<div class="alert alert-danger">‚ùå Errore nell\'invio. Puoi scrivere direttamente a <a href="mailto:info@redditocrescente.it">info@redditocrescente.it</a></div>';
    }
    
    // Ripristina il bottone
    btnText.textContent = 'Invia Richiesta';
    spinner.classList.add('d-none');
    btn.disabled = false;
});
</script>